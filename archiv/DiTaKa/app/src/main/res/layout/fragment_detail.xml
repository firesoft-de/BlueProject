<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dresden.de.digitaleTaschenkarteBeladung.fragments.DetailFragment"
    android:layout_margin="@dimen/margin_supersmall">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/margin_small">

                <TextView
                    android:id="@+id/detailName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_big"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/margin_normal"
                    android:paddingStart="@dimen/margin_normal"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_highlight"
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:text="Platzhalter" />

                <TextView
                    android:id="@+id/detailDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_small"
                    android:ellipsize="end"
                    android:maxLines="10"
                    android:textAlignment="viewStart"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size_normal"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/detailName"
                    tools:text="Platzhalter" />

                <TextView
                    android:id="@+id/detailSetNameStatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="16dp"
                    android:text="@string/detail_setname"
                    android:textAlignment="viewStart"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size_normal"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/detailDescription" />

                <TextView
                    android:id="@+id/detailSetName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="85dp"
                    android:maxLines="2"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size_normal"
                    card_view:layout_constraintBaseline_toBaselineOf="@+id/detailSetNameStatic"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toStartOf="@+id/detailSetNameStatic"
                    tools:text="Platzhalter" />

                <TextView
                    android:id="@+id/detailAdditionalNotesStatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_additionalNotes"
                    android:textAlignment="viewStart"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size_normal"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/detailCountStatic" />

                <TextView
                    android:id="@+id/detailAdditionalNotes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginStart="85dp"
                    android:maxLines="10"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size_normal"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toStartOf="@+id/detailCountStatic"
                    card_view:layout_constraintTop_toTopOf="@+id/detailAdditionalNotesStatic"
                    tools:text="Platzhalter mit langem Text sdkflskdf lskmdflkdmf aasdfasd" />

                <TextView
                    android:id="@+id/detailCountStatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_count"
                    android:textAlignment="viewStart"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size_normal"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/detailSetNameStatic" />

                <TextView
                    android:id="@+id/detailCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginStart="85dp"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size_normal"
                    card_view:layout_constraintBaseline_toBaselineOf="@+id/detailCountStatic"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toStartOf="@+id/detailCountStatic"
                    tools:text="12" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@+id/card1">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_small">

                <TextView
                    android:id="@+id/detailTVPosition"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_big"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/margin_normal"
                    android:paddingStart="@dimen/margin_normal"
                    android:text="@string/detail_position"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_highlight" />

                <TextView
                    android:id="@+id/detailPosition"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="@dimen/margin_small"
                    android:paddingEnd="@dimen/text_size_small"
                    android:paddingStart="@dimen/text_size_small"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size_normal"
                    card_view:layout_constraintTop_toBottomOf="@+id/detailTVPosition"
                    tools:text="Platzhalter\nPlatzhalter\nPlatzhalter" />

                <ImageView
                    android:id="@+id/detailItemImage"
                    android:layout_width= "match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toBottomOf="@+id/detailPosition"
                    android:contentDescription="Positionsplatzhalter"
                    android:background="@color/text_highlight"
                    android:layout_margin="@dimen/margin_small"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

</ScrollView>
